{% extends 'base.html.twig' %}

{% block body %}
    <h1>Historical</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historical.id }}</td>
            </tr>
            <tr>
                <th>Returnbook</th>
                <td>{% if historical.returnBook %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historical_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('historical_edit', { 'id': historical.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
